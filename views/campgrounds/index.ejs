<% layout("./layouts/boilerplate") -%>
<h1>キャンプ場一覧</h1>
<% for(let campground of campgrounds) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid rounded-start" src="<%= campground.imageUrl %>" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
        <p class="card-text text-muted"><small><%= campground.location %></small></p>
        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>"><%= campground.title %>の詳細</a>
      </div>
    </div>
  </div>
</div>
<% } %>
