<% layout("./layouts/boilerplate") %>

<div class="row">
  <div class="col-6 offset-3">
    <h1 class="text-center">キャンプ場の更新</h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">キャンプ場名</label>
        <input class="form-control" type="text" id="title" name="campground[title]" value="<%= campground.title %>" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">場所</label>
        <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campground.location %>" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="imageUrl">画像URL</label>
        <input class="form-control" type="text" id="imageUrl" name="campground[imageUrl]" value="<%= campground.imageUrl %>" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">価格</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">¥</span>
          <input type="number" class="form-control" id="price" name="campground[price]" placeholder="0" aria-label="price-label" aria-describedby="price-label" value="<%= campground.price %>" />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">説明文</label>
        <textarea class="form-control" type="text" id="description" name="campground[description]"><%= campground.description %></textarea>
      </div>
      <button class="btn btn-info">更新する</button>
    </form>
  </div>
</div>
